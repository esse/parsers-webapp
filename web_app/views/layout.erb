<!doctype html>
<html lang="en">
  <head>
  <title>Berlin events database</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Berlin events database</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-md-0">
          <select name="source" class="form-control">
            <option></option>
            <% @sources.each do |source| %>
              <option><%= source %></option>
            <% end %>
          </select>

          <input type="date" class="form-control" name="date" placeholder="Event date">
          <input type="title" class="form-control" placeholder="Title" name="name">
          <input type="submit" class="form-control" value="▶️">
        </form>
      </nav>

      <div>
        <%= yield %>
      </div>

    </div>
  </body>
</html>
